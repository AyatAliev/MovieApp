<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/app_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_scrollFlags="scroll|enterAlways">

    <ImageView
        android:id="@+id/toolbar_left_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/element_margin"
        android:src="@drawable/ic_arrow_back_white"
        android:visibility="invisible"
        android:layout_marginStart="@dimen/element_margin"
        android:background="?selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription"
        app:tint="@color/action_bar_icon"
        android:layout_marginLeft="@dimen/element_margin" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/page_margin"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:fontFamily="@font/roboto_medium"
        android:paddingTop="@dimen/medium_margin"
        android:paddingBottom="@dimen/page_margin"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/toolbar_left_action"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/toolbar_title"
        tools:text="Title" />

</RelativeLayout>